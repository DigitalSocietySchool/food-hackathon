<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/iconProduct"
        android:layout_width="45dip"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dip"
        android:layout_marginRight="6dip"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="26dip"
        android:layout_alignTop="@+id/iconProduct"
        android:layout_toRightOf="@+id/iconProduct"
        android:ellipsize="marquee"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@+id/product"
        android:textColor="@color/label_product"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product"
        android:gravity="right"
        android:text="11@+id/price"
        android:textColor="@color/label_product"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product"
        android:layout_toRightOf="@+id/iconProduct"
        android:text="@+id/weight"
        android:textColor="@color/label_product"
        android:textSize="12sp" />

    <ExpandableListView
        android:id="@+id/expandableListView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/weight"
        android:layout_marginTop="68dp" >

        <TextView
            android:id="@+id/farmer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weight"
            android:layout_toRightOf="@+id/iconProduct"
            android:text="@+id/weight"
            android:textColor="@color/label_product"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/farmer"
            android:layout_toRightOf="@+id/iconProduct"
            android:text="@+id/weight"
            android:textColor="@color/label_product"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_toRightOf="@+id/iconProduct"
            android:text="@+id/date"
            android:textColor="@color/label_product"
            android:textSize="12sp" />
    </ExpandableListView>

</RelativeLayout>